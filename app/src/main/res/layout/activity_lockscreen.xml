<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/lockscreen_bg"
    tools:context="com.lvyingbin.fastencryption.com.lvyingbin.fastencryption.activity.LockScreenActivity">

    <TextView
        android:id="@+id/lock_screen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/lock_screen_text"/>
    
    <LinearLayout
        android:id="@+id/lock_screen_4point"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lock_screen_text"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/lockScreen_4point1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lockscreen_4point"/>
        <ImageView
            android:id="@+id/lockScreen_4point2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/lockscreen_4point"/>
        <ImageView
            android:id="@+id/lockScreen_4point3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/lockscreen_4point"/>
        <ImageView
            android:id="@+id/lockScreen_4point4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/lockscreen_4point"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lock_screen_4point"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:id="@+id/dialNum123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/dialNum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/lockscreendialnum"
                android:clickable="true"/>
            <TextView
                android:id="@+id/dialNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="2"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/lockscreendialnum"
                android:clickable="true"/>
            <TextView
                android:id="@+id/dialNum3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="3"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/lockscreendialnum"
                android:clickable="true"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dialNum456"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/dialNum4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/lockscreendialnum"
                android:clickable="true"/>
            <TextView
                android:id="@+id/dialNum5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="5"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/lockscreendialnum"
                android:clickable="true"/>
            <TextView
                android:id="@+id/dialNum6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="6"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/lockscreendialnum"
                android:clickable="true"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dialNum789"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/dialNum7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/lockscreendialnum"
                android:clickable="true"/>
            <TextView
                android:id="@+id/dialNum8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="8"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/lockscreendialnum"
                android:clickable="true"/>
            <TextView
                android:id="@+id/dialNum9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="9"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/lockscreendialnum"
                android:clickable="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/dialNum0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/lockscreendialnum"
                android:clickable="true"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
